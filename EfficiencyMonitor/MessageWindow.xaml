<Window x:Class="EfficiencyMonitor.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EfficiencyMonitor"
        mc:Ignorable="d"
        Title="Оповещение" Height="165" Width="350" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Closed="Window_Closed">
    <Grid>
        <Button x:Name="OkBtn" Content="Ок" HorizontalAlignment="Left" Margin="25,91,0,0" VerticalAlignment="Top" Width="75" Click="OkBtn_Click"/>
        <Button x:Name="LaterBtn" Content="Отложить" HorizontalAlignment="Left" Margin="150,91,0,0" VerticalAlignment="Top" Width="75" Click="LaterBtn_Click"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="230,91,0,0" VerticalAlignment="Top" Width="94" SelectionChanged="comboBox_SelectionChanged"/>
        <TextBlock x:Name="Message" HorizontalAlignment="Left" Margin="25,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="53" Width="299" TextAlignment="Center" LineHeight="16" FontSize="16"/>

    </Grid>
</Window>
